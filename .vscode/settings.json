{
  "eslint.format.enable": false,
  "editor.formatOnSave": false,
  "eslint.workingDirectories": [
    { "mode": "auto" }
  ],
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": ["javascript", "vue"],

  "search.exclude": {
    "**/dist": true,
  }
}
